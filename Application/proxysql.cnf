datadir="/var/lib/proxysql"

admin_variables=
{
    admin_credentials="admin:admin"
    mysql_ifaces="0.0.0.0:6032"
}

mysql_variables=
{
    threads=4
    max_connections=2048
    default_query_delay=0
    default_query_timeout=36000000
    have_compress=true
    poll_timeout=2000
    interfaces="0.0.0.0:6033"
    default_schema="information_schema"
    stacksize=1048576
    server_version="8.0.35"
    connect_timeout_server=3000
    monitor_username="admin"
    monitor_password="admin"
    monitor_history=600000
    monitor_connect_interval=60000
    monitor_ping_interval=10000
    monitor_read_only_interval=1500
    monitor_read_only_timeout=500
    ping_interval_server_msec=120000
    ping_timeout_server=500
    commands_stats=true
    sessions_sort=true
    connect_retries_on_failure=10
}

mysql_servers =
(
    {
        address="mysql"
        port=3306
        hostgroup=0
        max_connections=200
    }
)

mysql_users =
(
    {
        username="admin"
        password="admin"
        default_hostgroup=0
        active=1
    },
    {
        username="root"
        password="root"
        default_hostgroup=0
        active=1
    }
)

mysql_query_rules =
(
    {
        rule_id=1
        active=1
        match_pattern="^DROP\\s+TABLE"
        match_pattern_regexp=1
        negate_match_pattern=0
        error_msg="DROP TABLE operations are not allowed"
        apply=1
        flags=0
        log=1
    },
    {
        rule_id=2
        active=1
        match_pattern="^DROP\\s+DATABASE"
        match_pattern_regexp=1
        negate_match_pattern=0
        error_msg="DROP DATABASE operations are not allowed"
        apply=1
        flags=0
        log=1
    },
    {
        rule_id=3
        active=1
        match_pattern="^DELETE"
        match_pattern_regexp=1
        negate_match_pattern=0
        error_msg="DELETE operations are not allowed"
        apply=1
        flags=0
        log=1
    },
    {
        rule_id=4
        active=1
        match_pattern="UNION SELECT"
        negate_match_pattern=0
        destination_hostgroup=0
        apply=1
        log=1
    },
    {
        rule_id=5
        active=1
        match_pattern="--"
        negate_match_pattern=0
        destination_hostgroup=0
        apply=1
        log=1
    }

)